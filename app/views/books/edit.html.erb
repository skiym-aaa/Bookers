<h1>Editing Book</h1>

  <%if @book.errors.any? %>
    <h5><%= @book.errors.count %> errors prohibited this book from being saves:</h5>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>

<%= form_for(@book, url: book_path(@book.id), method: :patch) do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Body</p>
  <%= f.text_area :body %>
  <br>
  <%= f.submit 'Update Book' %>
<% end %>
<p><%= link_to "Show", book_path %>
  |  
<%= link_to "Back", books_path %></p>
