<h1>Books</h1>
  <table border="0">
  <thead>
    <tr>
      <th>Title</th><th>Body</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td>Show</td>
      <td>Edit</td>
      <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
    </tr>
    <% end %>
  </tbody>
  </table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>

    <h4>Title</h4>
    <%= f.text_field :title %>

    <h4>Body</h4>
    <%= f.text_area :body %>

    <%= f.submit 'Create Book' %>

<% end %>
